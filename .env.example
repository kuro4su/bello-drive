# --- Server Configuration ---
PORT=3000
DEBUG_LOGS=true # Set to true to see verbose tracing logs (uploads/deletes)

# --- Discord Storage (Bot) ---
# Create a Bot at: https://discord.com/developers/applications
# Ensure it has "Message Content Intent" enabled.
DISCORD_BOT_TOKEN=your_bot_token_here
DISCORD_CHANNEL_ID=your_channel_id_here

# --- Security ---
# This key encrypts ALL your files. Do not lose it!
ENCRYPTION_KEY=change_this_to_a_complex_secret_phrase

# --- Database (Supabase) ---
# Get these from: https://supabase.com/dashboard/project/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_service_role_key

# --- Deployment ---
# Required for production (e.g. https://neko-drive.vercel.app)
ALLOWED_ORIGIN=http://localhost:5173

# --- Authentication ---
JWT_SECRET=change_this_to_a_long_random_string

