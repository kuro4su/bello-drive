{
  "version": 2,
  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/upload(.*)",
      "dest": "/src/index.js"
    },
    {
      "src": "/files(.*)",
      "dest": "/src/index.js"
    },
    {
      "src": "/files",
      "dest": "/src/index.js"
    },
    {
      "src": "/download/(.*)",
      "dest": "/src/index.js"
    },
    {
      "src": "/auth(.*)",
      "dest": "/src/index.js"
    },
    {
      "src": "/admin(.*)",
      "dest": "/src/index.js"
    },
    {
      "src": "/status",
      "dest": "/src/index.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/index.html"
    }
  ]
}